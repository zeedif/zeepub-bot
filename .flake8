[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501, E712, E711, F401, E402, E741, F541, F841, F811, W291, E225, E305
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,venv,zeepub-web,node_modules,validate_links.py,tests,plugins,tools
per-file-ignores =
    utils/__init__.py:F401,F403
